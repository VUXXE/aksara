{
    "name": "aksara-monorepo",
    "private": true,
    "scripts": {
        "build": "dotenv -e .env -- turbo build",
        "dev": "dotenv -e .env -- turbo dev",
        "lint": "dotenv -e .env -- turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "dotenv-cli": "^11.0.0",
        "prettier": "^3.4.2",
        "turbo": "^2.3.3"
    },
    "packageManager": "bun@1.1.38",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}